@model Get_A_Taxi.Web.ViewModels.UserDetailsVM
@using Get_A_Taxi.Web.Infrastructure.LocalResource
<fieldset>
    <legend>@Resource.Details</legend>
    <div style="float:left">
        @if (Model.Photo != null)
        {
            string imageBase64 = Convert.ToBase64String(Model.Photo.Content);
            string imageSrc = string.Format("data:image/{0};base64,{1}", Model.Photo.FileExtension, imageBase64);
            <img src="@imageSrc" width="@Model.Photo.Width.ToString()" height="@Model.Photo.Height.ToString()" />
        }
        else
        {
            <img src="~/Content/Images/person.png" />
        }
    </div>
    <div>
        @Html.Hidden("userId", Model.Id)

        @Html.LabelFor(m => m.FullName)<br />
        @Html.DisplayFor(m => m.FullName)<br />

        @Html.LabelFor(m => m.District)<br />
        @Html.DisplayFor(m => m.District)<br />

        @Html.LabelFor(m => m.PhoneNumber)<br />
        @Html.DisplayFor(m => m.PhoneNumber)<br />

        @Html.LabelFor(m => m.Email)<br />
        @Html.DisplayFor(m => m.Email)<br />
    </div>

</fieldset>

