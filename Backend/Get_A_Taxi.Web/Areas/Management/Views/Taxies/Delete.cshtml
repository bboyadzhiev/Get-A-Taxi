@using Get_A_Taxi.Web.Infrastructure.LocalResource;
@model Get_A_Taxi.Web.ViewModels.TaxiDetailsVM
@{
    ViewBag.Title = Resource.Decomission + " " + Resource.Taxi;
}
<h2>@ViewBag.Title</h2>

<h3>@Resource.DecomissionConfirm @Resource.Taxi?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Plate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Plate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Seats)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Seats)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Luggage)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Luggage)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DistrictTitle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DistrictTitle)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="@Resource.Decomission" title="Decomission taxi" class="btn btn-default" />
            @Html.ActionLink(Resource.BackToList, "Index", null, new { @class = "btn btn-default" })
        </div>
    }
</div>
