@model IEnumerable<Get_A_Taxi.Web.ViewModels.TaxiStandVM>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Alias)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Active)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Latitude)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Longitude)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Alias)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Latitude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Longitude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.TaxiStandId }) |
                @Html.ActionLink("Details", "Details", new { id = item.TaxiStandId }) |
                @Html.ActionLink("Deactivate", "Delete", new { id = item.TaxiStandId })
            </td>
        </tr>
    }

</table>
