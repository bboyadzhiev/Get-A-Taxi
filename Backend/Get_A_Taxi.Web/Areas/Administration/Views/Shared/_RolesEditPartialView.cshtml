@using Get_A_Taxi.Web.Infrastructure.LocalResource
@model Get_A_Taxi.Web.Areas.Administration.ViewModels.RolesEditVM
@using (Html.BeginForm("Update", "Roles", FormMethod.Post, new { @class = "form", enctype = "multipart/form-data" }))
{
    <fieldset>
        <legend>@Resource.UserDetails</legend>

        @Html.AntiForgeryToken()

        @Html.Hidden("userId", Model.Id)
        @Html.LabelFor(model => model.Name)<br />
        @Html.DisplayFor(model => model.Name)<br />
        @Html.LabelFor(model => model.PhoneNumber) <br />
        @Html.DisplayFor(model => model.PhoneNumber) <br />
    </fieldset>
    <fieldset>
        <legend>@Resource.Userss @Resource.Roles</legend>
        @foreach (var role in Model.UserRoles)
        {
            <input type="checkbox" id="@role.Value" name="selectedRoles" value="@role.Text"
                   @if (role.Selected) { @: checked="checked"
                                  } />
            @Html.Label(role.Text)
            <br />
        }
        <input type="submit" value="@Resource.Save" class="btn btn-default" />
        @Html.ActionLink(Resource.Cancel, "Index", null, new { @class = "btn btn-default" })
    </fieldset>
}